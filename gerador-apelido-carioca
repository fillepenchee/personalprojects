import random

def a():
    nome = str(input())
    fim = False
    resposta = "s"
    while fim == False:
        print(f"Seu apelido carioca é {nome}" + " " + random.choice(listageral) + ".")
        print(f"Digite 'S' para Sair e qualquer outra tecla para gerar um novo nome: \n")
        resposta = str(input())
        if resposta == "S":
            fim = True

listageral = ["Cordão de Prata", "Corrente de Ouro", "Pepita", "Brilhantes", "Diamante", "Seis Anéis", "Senhor(a) do Anel", "Dentinho de Ouro", "Tiara Dourada", "Cara da Riqueza", "Tiarinha", "Tiaras", "Rei/Rainha do Ouro", "Boca Rica", "Ouro de Tolo", "Joias", "Joalheiro(a)", "Esmeralda", "Turmalina", "Rubis", "Medalhão", "Mil Pulseiras", "Ouro Rosa", "das Bijus", "Prata Pura", "Colar de Diamantes", "Brinco de Ouro", "Argola de Prata", "Bracelete", "Ali Babá", "Cristais", "Topázio", "Safira", "Ametista", "Ourives", "Pedras Preciosas", "Gemas Valiosas", "Terras Raras", "Altos Valores", "Grandes Somas", "Valores", "Numerário", "Fortuna", "Lingote", "Tesouro", "Tesoureiro(a)", "Moedas", "Luxo Puro", "Petróleo", "Petrodólares", "Paraíso Fiscal"]

        print(f"Você já conhece personalidades do RJ como 'TH Joias' ou 'Chico Moedas'...")
        print(f"Este é o gerador de apelidos cariocas que sugerem malandragem, opulência e uma leve (ou não tão leve) contravenção.")
print("Escreva seu primeiro nome: \n")
a()
